<BocDateTimeValueValidator>
  <Class>
    <remarks>
      <list type="table">
        <listheader>
          <term>Configuration</term>
          <description>Input Requirements</description>
        </listheader>
        <item>
          <term>DateTime / Required</term>
          <description>
            <para>
              Date-Field: mandatory
            </para><para>
              Time-Field: mandatory
            </para>
          </description>
        </item>
        <item>
          <term>DateTime / Not Required</term>
          <description>
            <para>
              Date-Field: mandatory if a time is provided, otherwise: optional
            </para><para>
              Time-Field: optional
            </para>
          </description>
        </item>
        <item>
          <term>Date / Required</term>
          <description>
            <para>
              Date-Field: mandatory
            </para>
          </description>
        </item>
        <item>
          <term>Date / Not Required</term>
          <description>
            <para>
              Date-Field: optional
            </para>
          </description>
        </item>
        <item>
          <term>Undefined</term>
          <description>
            <para>
              Date-Field: unchecked
            </para><para>
              Time-Field: unchecked
            </para>
          </description>
        </item>
      </list>
    </remarks>
  </Class>
</BocDateTimeValueValidator>
