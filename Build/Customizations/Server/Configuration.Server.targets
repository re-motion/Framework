<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="Before_Server_CIBuild" BeforeTargets="Server_CIBuild">
    <PropertyGroup>
      <TestCategoriesToExclude Condition="'$(TestCategoriesToExclude)' == ''">LongRunning;ControlSelectorTest</TestCategoriesToExclude>
    </PropertyGroup>
  </Target>
  <Target Name="Before_FullBuild_Configuration" BeforeTargets="FullBuild_Configuration">
    <PropertyGroup>
      <!-- Disable documentation because Sandcastle Helpfile Builder cannot find the installed HHC.exe even though it exists.
           There is no cost/benefit in maintaining the documentation in the hotfix-only version of re-motion. 
      -->
      <SkipDocumentation>True</SkipDocumentation>
    </PropertyGroup>
  </Target>
</Project>