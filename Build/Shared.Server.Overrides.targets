<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="Before_PrepareVersionCiAndNightlyBuild" BeforeTargets="PrepareVersionCiAndNightlyBuild">
    <PropertyGroup>
      <_versionBackup>$(Version)</_versionBackup>
      <Version></Version>
    </PropertyGroup>
  </Target>

  <Target Name="After_PrepareVersionCiAndNightlyBuild" AfterTargets="PrepareVersionCiAndNightlyBuild">
    <PropertyGroup>
      <Version>$(_versionBackup)</Version>
      <_versionBackup></_versionBackup>
    </PropertyGroup>
  </Target>

  <Target Name="After_CreateAdditionalBuildMetadata" AfterTargets="CreateAdditionalBuildMetadata">
    <PropertyGroup>
      <!-- replace original AdditionalBuildMetadata -->
      <AdditionalBuildMetadata>$(ReleaseType).SVNRevision-$(SvnRevision)</AdditionalBuildMetadata>
    </PropertyGroup>
  </Target>

  <Target Name="After_BuildReleaseProjects" AfterTargets="BuildReleaseProjects">
    <Message Text="##teamcity[buildStatisticValue key='Duration.BuildReleaseProjects.$(ProjectID).$(ConfigurationID)' value='$(_timeTaken)']"
             Condition="'$(TEAMCITY_VERSION)' != ''" />
  </Target>

  <Target Name="After_BuildTestProjects" AfterTargets="BuildTestProjects">
    <Message Text="##teamcity[buildStatisticValue key='Duration.BuildTestProjects.$(ProjectID).$(ConfigurationID)' value='$(_timeTaken)']"
             Condition="'$(TEAMCITY_VERSION)' != ''" />
  </Target>

  <Target Name="After_RunTests" AfterTargets="RunTests">
    <Message Text="##teamcity[buildStatisticValue key='Duration.RunTests.$(ProjectID).$(ConfigurationID)' value='$(_timeTaken)']"
             Condition="'$(TEAMCITY_VERSION)' != ''" />
  </Target>

</Project>